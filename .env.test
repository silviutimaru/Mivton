# Test Environment Configuration
# Separate local PostgreSQL database for testing (NOT production)
DATABASE_URL=postgresql://localhost:5432/mivton_test
POSTGRES_PASSWORD=test-password

# Application Configuration
NODE_ENV=test
PORT=3001
SESSION_SECRET=test-session-secret-key-not-for-production

# JWT Configuration
JWT_SECRET=test-jwt-secret-key-not-for-production
BCRYPT_ROUNDS=4

# Security Configuration (relaxed for testing)
RATE_LIMIT_MAX=1000

# Email Configuration (disabled for testing)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=

# Feature Flags
ENABLE_DEMO_MODE=true
ENABLE_ANALYTICS=false
ENABLE_REAL_TIME=false

# Frontend URL
FRONTEND_URL=http://localhost:3001

# Database pool settings for testing
DB_POOL_MIN=2
DB_POOL_MAX=5
DB_POOL_IDLE_TIMEOUT=10000
