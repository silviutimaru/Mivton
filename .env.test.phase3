# Test Environment Configuration for Phase 3
# In-memory PostgreSQL simulation for testing without local setup

NODE_ENV=test
PORT=3001

# Simulated Database Configuration
# Uses in-memory database that mimics PostgreSQL structure
DATABASE_URL=postgresql://test_user:test_password@localhost:5432/mivton_test_memory
POSTGRES_PASSWORD=test_password

# Application Configuration
SESSION_SECRET=test-session-secret-key-phase-3
JWT_SECRET=test-jwt-secret-key-phase-3
BCRYPT_ROUNDS=4

# Security Configuration (relaxed for testing)
RATE_LIMIT_MAX=1000

# Feature Flags for Testing
ENABLE_DEMO_MODE=true
ENABLE_ANALYTICS=false
ENABLE_REAL_TIME=true

# Frontend URL
FRONTEND_URL=http://localhost:3001

# Database pool settings optimized for testing
DB_POOL_MIN=1
DB_POOL_MAX=3
DB_POOL_IDLE_TIMEOUT=5000

# Testing specific settings
TEST_MODE=true
BYPASS_EMAIL_VERIFICATION=true
SKIP_RATE_LIMITING=false
LOG_LEVEL=debug
